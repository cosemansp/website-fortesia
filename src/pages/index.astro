---
import { useStoryblokApi, type ISbStoriesParams } from "@storyblok/astro";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";
import MainLayout from "../layouts/MainLayout.astro";

// const storyblokApi = useStoryblokApi();
---

<MainLayout>
  <div class="md:h-[calc(100vh-51px)] md:-mt-30 bg-cover bg-hero bg-no-repeat">
    <div class="flex justify-center items-center m-30">
      <img
        src="art-of-nature-logo2.png"
        loading="lazy"
        class="inline-block mt-10 lg:mt-20 w-auto h-[300px] md:h-[500px] max-w-full opacity-100"
      />
    </div>
    <div class="flex justify-center items-center">
      <div class="flex flex-col align-middle absolute top-auto bottom-0">
        <div
          class="block static mx-2 mb-1 max-w-full font-sans font-bold tracking-wider leading-4 text-center text-white uppercase opacity-90 xl:font-sans xl:text-white"
          style="font-size: 10px;"
        >
          SCROLL
        </div>
        <div class="flex justify-center">
          <div class="inline-block mt-1 w-px h-10 bg-white"></div>
        </div>
      </div>
    </div>
  </div>
  <p>some text</p>
</MainLayout>
